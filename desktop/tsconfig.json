{
	"compilerOptions": {
		"target": "es2021",
		"module": "commonjs",
		"lib": [
			"dom",
			"esnext"
		],
		"baseUrl": ".",
		"allowJs": true,
		"jsx": "react",
		"sourceMap": true,
		"outDir": "./dist",
		"strict": true,
		"esModuleInterop": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"strictNullChecks": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"emitDecoratorMetadata": true,
		"paths": {
			"@services/*": [
				"app/src/main/services/*"
			],
			"@apis/*": [
				"app/src/main/apis/*"
			],
			"@components/*": [
				"app/src/renderer/components/modules/*"
			],
			"@modules/*": [
				"app/src/renderer/store/module/*"
			]
		}
	},
	"include": [
		"./app",
		"./config"
	]
}
