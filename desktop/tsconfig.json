{
	"compilerOptions": {
		"target": "es2021",
		"module": "commonjs",
		"moduleResolution": "node",
		"lib": [
			"dom",
			"esnext"
		],
		"allowJs": true,
		"jsx": "react",
		"sourceMap": true,
		"outDir": "./dist",
		"strict": true,
		"baseUrl": ".",
		"esModuleInterop": true,
		"noImplicitAny": true,
		"noImplicitThis": true,
		"strictNullChecks": true,
		"allowSyntheticDefaultImports": true,
		"experimentalDecorators": true,
		"resolveJsonModule": true,
		"emitDecoratorMetadata": true,
		"paths": {
			"@/*": [
				"app/src/*"
			],
			"@apis/*": [
				"app/src/main/apis/*"
			],
			"@components/*": [
				"app/src/renderer/components/modules/*"
			],
			"@hooks/*": [
				"app/src/renderer/hooks/*"
			],
			"@modules/*": [
				"app/src/renderer/store/module/*"
			],
			"@services/*": [
				"app/src/main/services/*"
			],
			"@store": [
				"app/src/renderer/store/index.ts"
			],
			"@store/*": [
				"app/src/renderer/store/*"
			]
		}
	},
	"include": [
		"./app",
		"./config"
	]
}
