{
	"version": "0.94.0",
	"name": "elytools",
	"main": "./app/dist/main.js",
	"scripts": {
		"build-main": "cross-env NODE_ENV=production webpack --config config/webpack/webpack.main.prod.config.js",
		"build-renderer": "cross-env NODE_ENV=production webpack --config config/webpack/webpack.renderer.prod.config.js",
		"build": "npm run build-main && npm run build-renderer",
		"start-renderer-dev": "webpack-dev-server --config config/webpack/webpack.renderer.dev.config.js",
		"start-main-dev": "webpack --config config/webpack/webpack.main.config.js && nodemon  -e ts,json --watch app/src/main -x \"electron ./app/dist/main.js\"",
		"start-dev": "cross-env START_HOT=1 npm run start-renderer-dev",
		"release": "cd config/release-app && dotnet run"
	},
	"build": {
		"productName": "Elytools",
		"appId": "fr.elyspio.elytools",
		"directories": {
			"app": "app",
			"output": "release",
			"buildResources": "config/build-config"
		},
		"linux": {
			"category": "Utility",
			"target": [
				"deb",
				"rpm",
				"snap"
			]
		},
		"win": {
			"target": [
				{
					"target": "nsis",
					"arch": [
						"x64",
						"ia32"
					]
				}
			]
		}
	},
	"author": {
		"name": "Jonathan Guichard",
		"email": "jona.guich69@gmail.com"
	},
	"license": "MIT",
	"devDependencies": {
		"@types/node": "16.11.26",
		"@swc/core": "^1.2.145",
		"axios": "^0.26.0",
		"cross-env": "^7.0.3",
		"css-loader": "^3.6.0",
		"electron": "^17.1.0",
		"electron-builder": "^22.14.13",
		"file-loader": "^6.2.0",
		"fork-ts-checker-webpack-plugin": "^4.1.6",
		"fs-extra": "^10.0.1",
		"html-webpack-plugin": "^4.5.2",
		"image-webpack-loader": "^7.0.1",
		"nodemon": "^2.0.15",
		"prettier": "^2.4.1",
		"redux-devtools-extension": "^2.13.9",
		"redux-logger": "^3.0.6",
		"sass": "1.43.3",
		"sass-loader": "^8.0.2",
		"source-map-loader": "^1.1.3",
		"style-loader": "^1.3.0",
		"swc-loader": "^0.1.15",
		"ts-node": "^10.4.0",
		"typescript": "^4.5.5",
		"webpack": "^4.44.1",
		"webpack-cli": "^3.3.12",
		"webpack-dev-server": "^3.11.2",
		"webpack-merge": "^5.8.0"
	}
}